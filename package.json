{
  "name": "buildhub",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "install-git-hooks": "npx simple-git-hooks",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare"
  },
  "dependencies": {
    "@vueuse/core": "^14.1.0",
    "@vueuse/nuxt": "14.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-vue-next": "^0.562.0",
    "nuxt": "^4.2.2",
    "reka-ui": "^2.7.0",
    "shadcn-nuxt": "2.4.3",
    "tailwind-merge": "^3.4.0",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.0.1",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@commitlint/config-pnpm-scopes": "^20.1.0",
    "@iconify-json/radix-icons": "^1.2.6",
    "@iconify/vue": "^5.0.0",
    "@nuxtjs/color-mode": "^4.0.0",
    "@nuxtjs/tailwindcss": "7.0.0-beta.1",
    "eslint": "^9.39.2",
    "lint-staged": "^16.2.7",
    "shadcn-vue": "^2.4.3",
    "simple-git-hooks": "^2.13.1",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/lint-staged",
    "commit-msg": "./node_modules/.bin/commitlint --edit \"$1\""
  },
  "lint-staged": {
    "*.{js,ts,vue,json}": [
      "eslint --fix"
    ]
  }
}
